@{
    Layout = "~/Themes/AdminTheme/Layouts/layout_main.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Menu Items
            <small><a href="~/admin/menu-items/create">Add Menu Item</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin Panel</a></li>
            <li class="active">Menu Items</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Label</th>
                                    <th>Link</th>
                                    <th>Type</th>
                                    <th>Is Nested Menu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var menuItem in ViewBag.menuItems)
                                {
                                    <tr>
                                        <td>@menuItem.Id</td>
                                        <td>@menuItem.Label</td>
                                        <td>/@menuItem.Link</td>
                                        <td> 
                                                @if(menuItem.MenuItemType == null)
                                                {
                                                    Html.Raw("-");
                                                }else
                                                {

                                                    @menuItem.MenuItemType.Name
                                                }
                                        </td>
                                        <td>@menuItem.IsMenu</td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<!-- TODO render at the end of body -->
<script src="~/admin-theme/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/admin-theme/plugins/datatables/dataTables.bootstrap.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable();
    });
</script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
<script src="http://malsup.github.com/jquery.form.js"></script> 
@{
    Layout = "~/Themes/AdminTheme/Layouts/layout_main.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Items
            <small>Edit Item</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin Panel</a></li>
            <li class="active">Items</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box box-primary">                   
      
                    <!-- form start -->
                    <form role="form" action="~/admin/items/edit" method="post">
                        <div class="box-body">
                            
                            <div class="form-group">
                                <label>Category</label>
                                <select class="form-control" name="CategoryId">
                                    @foreach (var cat in ViewBag.cats)
                                    {
                                        if (cat.CategoryId == ViewBag.item.Item.CategoryId)
                                        {
                                        <option id="CategoryId" value="@cat.CategoryId" selected="selected">@cat.Description</option>
                                        }
                                        else
                                        {
                                        <option id="CategoryId" value="@cat.CategoryId">@cat.Description</option>
                                        }
                                    }
                                </select>
                            </div>

                            <input type="hidden" class="form-control" name="ItemId" id="ItemId" value=@ViewBag.item.Item.Id>
                            <input type="hidden" class="form-control" name="Item_LanguageId" id="Item_LanguageId" value=@ViewBag.item.Id>
                            <input type="hidden" class="form-control" name="LanguageId" id="LanguageId" value=@ViewBag.item.LanguageId>


                                <div class="form-group">
                                    <label for="Title">Title</label>
                                    <input type="text" class="form-control" name="Title" id="Title" value=@ViewBag.item.Title>
                                </div>
                                <div class="form-group">
                                    <label for="ShortContent">Short Content</label>
                                    <textarea rows="4" class="form-control" name="ShortContent" id="ShortContent" >@ViewBag.item.ShortContent</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="FullContent">Full Content</label>
                                    <textarea rows="4" class="form-control" name="FullContent" id="FullContent" placeholder="Enter full content">@ViewBag.item.FullContent</textarea>
                                </div>
                            </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
                
            </div>
            <!--/.col (left) -->
           
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
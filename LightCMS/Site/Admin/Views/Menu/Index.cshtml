
@{
    Layout = "~/Themes/AdminTheme/Layouts/layout_main.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Menus
            <small><a href="~/admin/menus/add">Add to an exist Menu</a></small>

            <small><a href="~/admin/menus/create">Create New Menu</a></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin Panel</a></li>
            <li class="active">Menus</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Language</th>
                                    <th>Description</th>
                            
                                    <th></th>
                                    <th></th>
                            
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var menu in ViewBag.menus)
                                {
                                    <tr>
                                        <td>@menu.MenuId</td>
                                        <td>@menu.Language.Name</td>
                                        <td>@menu.Description</td>
                                        @foreach (var v in @menu.Menu.Category.Category_Language)
                                        {
                                            if (v.MenuId == @menu.MenuId && v.LanguageId == @menu.Language.Id)
                                            {
                                                <td>v.Description</td>
                                                return;
                                            }
                                        }    
                                        <td><small><a href="~/admin/menus/delete/@menu.Id">Delete</a></small></td>
                                        <td><small><a href="~/admin/menus/edit/@menu.Id">Edit</a></small></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

<!-- TODO render at the end of body -->
<script src="~/admin-theme/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/admin-theme/plugins/datatables/dataTables.bootstrap.min.js"></script>

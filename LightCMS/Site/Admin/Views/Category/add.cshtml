@{
    Layout = "~/Themes/AdminTheme/Layouts/layout_main.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Categories
            <small>Add to exist category</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Admin Panel</a></li>
            <li class="active">Categories</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-9">
                <!-- general form elements -->
                <div class="box box-primary">

                    <!-- form start -->
                    <form role="form" action="~/admin/categories/add" method="post">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Language</label>
                                <select class="form-control" name="LanguageId">
                                    @foreach (var lang in ViewBag.languages)
                                    {
                                    <option id="LanguageId" value="@lang.Id">@lang.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                            <div class="box-body">
                                <div class="form-group">
                                    <label>Category</label>
                                    <select class="form-control" name="CategoryId">
                                        @foreach (var cats in ViewBag.cats)
                                        {
                                        <option id="CategoryId" value="@cats.CategoryId">@cats.Description</option>
                                        }
                                    </select>
                                </div>
                            </div>


                            <div class="box-body">
                                <div class="form-group">
                                    <label for="Title">Description</label>
                                    <input type="text" class="form-control" name="Description" placeholder="Enter description">
                                </div>
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                    </form>
                </div>
                <!-- /.box -->

            </div>
            <!--/.col (left) -->

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>